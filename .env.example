# Environment Variables for Vercel Deployment
# Copy this file to .env.local and fill in your actual values
# All variables are optional - the site will work without them but some features may be disabled

# Spotify Integration (Optional)
# Get these from https://developer.spotify.com/dashboard/applications
# Used to display currently playing music
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id
NEXT_PUBLIC_SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
NEXT_PUBLIC_SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token

# LogRocket (Optional)
# Get this from https://app.logrocket.com/
# Used for user session recording and debugging
NEXT_PUBLIC_LOGROCKET_ID=your_logrocket_id

# GitHub Integration (Optional)
# Generate a personal access token at https://github.com/settings/tokens
# Used to fetch GitHub contributions and repository data
NEXT_PUBLIC_GITHUB_TOKEN=your_github_token

# WakaTime Integration (Optional)
# Get this from https://wakatime.com/api-key
# Used to display coding time statistics
WAKATIME_SECRET_KEY=your_wakatime_secret_key

# Umami Analytics (Optional)
# Get these from your Umami instance
# Used for privacy-friendly website analytics
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your_umami_website_id
NEXT_PUBLIC_UMAMI_WEBSITE_URL=https://your-umami-instance.com

# Production Environment (Set automatically by Vercel)
NODE_ENV=production